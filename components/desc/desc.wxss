.desc-container {
  display: flex;
  flex-direction: column;
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

.desc-container .image {
  width: 100%;
  max-height: 500rpx;
  margin: 0;
}

.desc-container .text {
  position: relative;
}

.desc-container .text .txt-type {
  display: flex;
  flex-direction: column;
  width: 50rpx;
  position: absolute;
  top: -70rpx;
  left: 60rpx;
  font-size: 50rpx;
}
.desc-container .text .txt-type .one {
  color: #fff;
}
.desc-container .text .txt-type .done {
  line-height: 1rpx;
  height: 10rpx;
}

.desc-container .text .txt-desc {
  display: inline-block;
  width: 100%;
  box-sizing: border-box;
  padding: 0 95rpx;
  margin-top: 120rpx;
  font-size: 34rpx;
}
